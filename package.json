{
  "name": "pip-agent-autonomous",
  "version": "0.1.0",
  "description": "Autonomous Performance Improvement Plan (PIP) pipeline using Gemini 2.5 Pro for transcription and Claude Sonnet 4.5 for drafting and policy review",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "tsx --test tests/validation.test.ts tests/runRequestValidator.test.ts tests/cost.test.ts tests/runStore.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.14",
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/genai": "^0.11.0",
    "docx": "^8.5.0",
    "docxtemplater": "^3.44.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "mime": "^4.0.4",
    "pino": "^10.0.0",
    "pizzip": "^3.2.0",
    "pump": "^3.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
